getRandomMinute(){
	echo "$(head -c 8192 /dev/urandom | tr -dc 0-9 | tail -c 1)"
}
run(){
	logInit "enableFeedJobSchedule"
	logWrite "starting..."
	
	JOBMASTER="${CRONDIR}/jobMaster"
	SIZE_FEED_PROCESSOR="${JOBMASTER} ${CRONDIR}/processSizeFeed"
	LOCATION_FEED_PROCESSOR="${JOBMASTER} ${CRONDIR}/processLocationFeed"
	IMAGE_FEED_PROCESSOR="${JOBMASTER} ${CRONDIR}/processImageFeed"

	[ ! -f $SIZE_FEED_PROCESSOR ] && logError "processSizeFeed not found."
	[ ! -f $LOCATION_FEED_PROCESSOR ] && logError "processLocationFeed not found."
	[ ! -f $IMAGE_FEED_PROCESSOR ] && logError "processImageFeed not found."
	
	echo " "
	M1=$(getRandomMinute);[ -z "$M1" ] && M1="*"
	M2=$(getRandomMinute);[ -z "$M2" ] && M2="*"
	M3=$(getRandomMinute);[ -z "$M3" ] && M3="*"
	
	crontab -r &> /dev/null	
	
	cat <(crontab -l 2>/dev/null) <(echo "$M1 * * * * $SIZE_FEED_PROCESSOR") | crontab -
	cat <(crontab -l 2>/dev/null) <(echo "$M2 * * * * $LOCATION_FEED_PROCESSOR") | crontab -
	cat <(crontab -l 2>/dev/null) <(echo "$M3 * * * * $IMAGE_FEED_PROCESSOR") | crontab -

	logWrite "jobs enabled.  done."
}
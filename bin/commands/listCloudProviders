run(){
	logInit "listCloudProviders"

	[ -z "$APIDIR" ] && logError "APIDIR not defined."
	[ ! -d "$APIDIR" ] && logError "APIDIR not found."

	LIST=$( getApiList )
	echo " "
	echo "Cloud Provider List: $(date)" 
	echo $(drawLine 96 "-")
	echo "API Provider		 Enabled	 Updated"
	echo $(drawLine 96 "-")
	if [ $(echo "$LIST" | tr -dc a-z0-9\_\- | wc -c) -le 1 ];then
		echo "+--------------------------------------------------+"
		echo "|No API accounts are enabled.                      |"
		echo "+--------------------------------------------------+"
	else
		for provider in $LIST; do
			ENABLED=""
			if [ -f "$APIDIR/$provider/enabled" ]; then
				ENABLED="yes" 
			else
				ENABLED="no"
			fi
			UPDATED="$(date +%F@%k:%M:%S.%N)"
			echo "$provider		 $ENABLED		 $UPDATED  "
		done	
	fi
	echo $(drawLine 96 "-")
	echo " "
}
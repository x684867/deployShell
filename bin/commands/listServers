run(){
	logInit "listRecipes"

	APILIST=$(ls -A "${ACCOUNTDIR}-enabled/*" &>/dev/null )
	echo $(drawLine 96 "=")
	logWrite "$(date): "
	echo $(drawLine 96 "=")
	echo " "
	if [ $(echo "$APILIST" | tr -dc a-z0-9\_\- | wc -c) -le 1 ];then
		echo $(drawLine 45 "-")
		logWrite "No API accounts are enabled."
		echo $(drawLine 45 "-")
	else
		for api in $APILIST; do 
			echo $(drawLine 50 "-")
			logWrite "listing servers on $api:"
			echo $(drawLine 50 "-")
			loadAPI $api
			runAPI "listServers"
			echo $(drawLine 50 "-")
		done
		logWrite "done."
	fi
}
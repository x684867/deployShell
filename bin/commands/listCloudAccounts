run(){
	logInit "listCloudAccounts"

	[ -z "$ACCOUNTDIR" ] && logError "ACCOUNTDIR not defined."
	ALLACCOUNTS="${ACCOUNTDIR}-available"
	ENABLEACCOUNTS="${ACCOUNTDIR}-enabled"
	
	[ ! -d "$ALLACCOUNTS" ] && mkdir -p $ALLACCOUNTS
	[ ! -d "$ENABLEACCOUNTS" ] && mkdir -p $ENABLEACCOUNTS
	LIST=$(ls -A $ALLACCOUNTS 2>/dev/null)
	echo " "
	echo "Account List: $(date)" 
	echo $(drawLine 96 "-")
	echo "Account Name		 Provider		 Enabled	 Updated"
	echo $(drawLine 96 "-")
	if [ $(echo "$LIST" | tr -dc a-z0-9\_\- | wc -c) -le 1 ];then
		echo " "
		echo "   +--------------------------------------------------+"
		echo "   |No accounts are enabled.                          |"
		echo "   +--------------------------------------------------+"
		echo " "
	else
		for account in $LIST; do
			ENABLED=""
			if [ -f "$ENABLEACCOUNTS/$account" ]; then
				ENABLED="yes" 
			else
				ENABLED="no"
			fi
			PROVIDER=$(grep API_PROVIDER ${ALLACCOUNTS}/${account} | awk -F\= '{print $2}' | tr -d \")
			
			UPDATED="$(date +%F@%k:%M:%S.%N)"
			echo "$account		 $PROVIDER		 $ENABLED		 $UPDATED  "
		done	
	fi
	echo $(drawLine 96 "-")
	echo " "
}